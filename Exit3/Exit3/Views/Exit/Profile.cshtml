@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">

    <style>
        .custom-border {
            border: 2px solid #ddd; /* Add a border to the main div */
            border-radius: 10px; /* Optional: Add rounded corners to the main div */
            padding: 10px; /* Optional: Add padding to the main div */
        }

        .profile-image {
            border-radius: 50%; /* Make the profile image round */
        }

        .post-image {
            max-width: 100%; /* Ensure images don't exceed their container's width */
            border-radius: 10px; /* Optional: Add rounded corners to post images */
            border: 1px solid #ddd; /* Add a border to post images */
            padding: 10px; /* Optional: Add padding to post images */
            margin-bottom: 10px; /* Optional: Add margin to post images */
        }
    </style>

    <title>Hello, world!</title>
</head>
<body>
    <div class="container mt-3">
        <!-- Add margin-top of 3 units for the first div -->
        <div class="custom-border">
            <div class="row">
                <div class="col-sm">
                    <img src="~/resimler/1f1d89a9-2a77-4f56-be0d-14241a7ec504.png" alt="Profil Resmi" class="profile-image">
                </div>
                <div class="col-sm">
                    <div class="row">
                        <p class="username"> @ViewBag.KullaniciAdi</p>
                    </div>
                    <div class="row mb-3"></div> <!-- Add an empty row with margin-bottom -->
                    <div class="row">
                        <p>Gönderi Sayısı: @ViewBag.GonderiSayisi</p>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="row">
                        <button class="btn btn-primary follow-button">Takip Et</button>
                    </div>
                    <div class="row mb-3"></div> <!-- Add an empty row with margin-bottom -->
                    <div class="row">
                        <p>Takipçi Sayısı: 500</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-1">
        <div class="custom-border mt-2">
            <!-- Add margin-top of 2 units for the first div -->
            <div class="row">
                <div class="col-sm">
                    <label for="aboutTextArea">Hakkında Bilgileriniz:</label>
                    <p id="aboutText" class="form-control">Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolor omnis expedita animi, eum consectetur sit dolorum pariatur sed natus, ducimus enim modi reprehenderit soluta harum deleniti fugiat incidunt numquam? Veniam.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-1 text-center">
        <div class="custom-border mt-2">
            <!-- Add margin-top of 2 units for the second div -->
            <div class="row">
                <div class="col-sm">
                    <label for="aboutTextArea">Gönderiler</label>
                    <!-- Add sample posts here -->
                    <div class="row">
                        @if (ViewBag.ResimUrls != null)
                        {
                            foreach (var resimUrl in ViewBag.ResimUrls)
                            {
                                <div class="col-sm-4">
                                    <img src="~/resimler/@resimUrl" alt="Post Image" class="post-image">
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const kullaniciId = urlParams.get('KullaniciId');

        console.log('Kullanıcı ID:', kullaniciId);

        const profileLink = document.getElementById('profileLink');
        profileLink.href = `/Exit/Profile?KullaniciId=${kullaniciId}`;
    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>
</html>
